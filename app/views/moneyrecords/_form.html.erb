
<%= render 'shared/errors', obj: @moneyrecord %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@moneyrecord, :html => {class:"form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :date %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :date, class: "form-control", placeholder: "Date", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :desc %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :desc, row: 5, class: "form-control", placeholder: "Description", autofocus: true %>
        </div>
      </div><div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :amount %>
        </div>
        <div class="col-sm-8">
          <%= f.number_field :amount, class: "form-control",  autofocus: true %>
        </div>
      </div><div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :total %>
        </div>
        <div class="col-sm-8">
          <%= f.number_field :total, class: "form-control",  autofocus: true %>
        </div>
      </div>


      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :credit %>
        </div>
        <div class="col-sm-8">
          <%= f.check_box :credit, class: "form-control check_box" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg'%>
        </div>
      </div>
    <% end %>

    <div class="col-xs-4 col-xs-offset-4">
      [<%= link_to "Cancel request and return to show all records", moneyrecords_path %>]
    </div>

  </div>
</div>
